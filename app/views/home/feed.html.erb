<div class="container">
  <h2 class="heading">Welcome to the our community library!</h2>
  <div class="feed-container">
    <% @books.each do |book| %>
      <article class="book">
        <div class="book-info-container">
          <strong class="book-info title"><%= book.title %></strong>
          <p class="book-info author-name"><%= book.author.name %></p>
          <span class="body-text"><%= book.release_date %></span>
        </div>
      </article>
    <% end %>
  </div>
</div>
